{
  "name": "clorio-wallet",
  "description": "Clorio wallet",
  "version": "2.1.3",
  "private": true,
  "main": "packages/main/dist/index.cjs",
  "author": {
    "name": "WeStakeClub",
    "email": "info@westake.club"
  },
  "type": "module",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "build:web": "cd ./packages/renderer && yarn build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.cjs --dir --config.asar=false",
    "compile:mac": "CSC_IDENTITY_AUTO_DISCOVERY=false yarn build && ./node_modules/.bin/electron-builder --config .electron-builder.config.cjs --publish never",
    "compile:all": "CSC_IDENTITY_AUTO_DISCOVERY=false yarn build && ./node_modules/.bin/electron-builder -mwl --config .electron-builder.config.cjs --publish never",
    "compile:linux": "CSC_IDENTITY_AUTO_DISCOVERY=false yarn build && ./node_modules/.bin/electron-builder -l --config .electron-builder.config.cjs --publish never",
    "compile:ml": "CSC_IDENTITY_AUTO_DISCOVERY=false yarn build && ./node_modules/.bin/electron-builder -ml --config .electron-builder.config.cjs --publish never",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "start": "node scripts/watch.mjs --host",
    "start:web": "cd ./packages/renderer && yarn start",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,tsx,jsx",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,vue,json}\""
  },
  "devDependencies": {
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@types/append-query": "^2.0.1",
    "@types/bad-words": "^3.0.3",
    "@types/crypto-js": "^4.1.2",
    "@types/node": "18.18.4",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "cross-env": "7.0.3",
    "electron": "26.3.0",
    "electron-builder": "24.13.3",
    "electron-vite": "^2.0.0",
    "eslint": "8.51.0",
    "happy-dom": "12.9.0",
    "nano-staged": "0.8.0",
    "playwright": "1.38.1",
    "simple-git-hooks": "2.9.0",
    "typescript": "5.2.2",
    "unplugin-auto-expose": "0.0.5",
    "vite": "4.4.11",
    "vite-plugin-graphql-loader": "^2.0.0",
    "vite-plugin-top-level-await": "^1.3.1",
    "vite-plugin-wasm": "^3.2.2",
    "vitest": "0.34.6"
  },
  "dependencies": {
    "@apollo/client": "3.8.5",
    "@ledgerhq/hw-transport-node-hid-singleton": "^6.28.18",
    "@ledgerhq/hw-transport-webhid": "^6.27.19",
    "@types/big.js": "^6.2.0",
    "@types/react-dom": "^18.2.12",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitejs/plugin-react": "^4.1.0",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "append-query": "^2.1.1",
    "bad-words": "^3.0.4",
    "big.js": "^6.2.1",
    "bignumber.js": "^9.1.2",
    "bip32": "4.0.0",
    "bip39": "3.1.0",
    "bootstrap": "^5.3.2",
    "bs58check": "^3.0.1",
    "buffer": "^6.0.3",
    "censorify-it": "3.0.2",
    "ci": "^2.3.0",
    "constants": "^0.0.2",
    "crypto-js": "^4.1.1",
    "date-fns": "2.19.0",
    "dotenv": "^16.3.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "6.1.4",
    "eslint-plugin-react": "^7.33.2",
    "graphql": "15.5.0",
    "i18next": "^23.15.1",
    "i18next-browser-languagedetector": "^8.0.0",
    "is-electron": "2.2.0",
    "js-sha256": "^0.10.1",
    "jspdf": "^2.5.1",
    "lottie-react": "^2.4.0",
    "mina-ledger-js": "^1.0.6",
    "mina-signer": "3.0.7",
    "nedb": "1.8.0",
    "nedb-promises": "^6.2.3",
    "pretty-print-json": "^3.0.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-i18next": "^15.0.2",
    "react-jdenticon": "^1.1.0",
    "react-loading-skeleton": "^3.3.1",
    "react-pro-sidebar": "^1.1.0-alpha.1",
    "react-router-dom": "^6.16.0",
    "react-spinners": "^0.13.8",
    "react-toastify": "^9.1.3",
    "react-tooltip": "4.2.21",
    "react-truncate-inside": "^1.0.3",
    "recoil": "^0.7.7",
    "recoil-persist": "^5.1.0",
    "sass": "^1.69.0",
    "tiny-secp256k1": "^2.2.3",
    "url": "^0.11.3",
    "vite-plugin-node-polyfills": "^0.21.0",
    "vite-plugin-svgr": "^4.1.0"
  },
  "build": {
    "appId": "io.clor",
    "productName": "Clorio-Wallet",
    "forceCodeSigning": true,
    "build": {
      "protocols": {
        "name": "Clorio-Wallet",
        "schemes": [
          "clorio"
        ]
      }
    },
    "files": [
      "!build-scripts${/*}",
      "build/**/*",
      "node_modules/**/*",
      "*.js",
      "*.js",
      "*.ts",
      "*.tsx",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "nsis": {
      "artifactName": "Clorio-Wallet.exe"
    },
    "win": {
      "publish": [
        "github"
      ]
    },
    "mac": {
      "icon": "./public/icons/mac/icon.icns",
      "category": "public.app-category.utilities",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "dmg": {
      "title": "Clorio Wallet",
      "background": "assets/background.png",
      "contents": [
        {
          "x": "320",
          "y": "280",
          "type": "file"
        },
        {
          "x": "580",
          "y": "280",
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "height": "450"
      }
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
